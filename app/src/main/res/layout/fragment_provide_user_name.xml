<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
            android:id="@+id/fragment_provide_user_name">

        <TextView
                android:text="@string/provide_user_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/provide_user_name_title"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
                android:textSize="@dimen/title_dialogue_size"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/provide_user_name_entry" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/provide_user_name_title" android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent" android:hint="@string/provide_user_name_hint"
                android:textSize="@dimen/base_text_size" android:layout_below="@+id/provide_user_name_title"/>
    </RelativeLayout>
</layout>